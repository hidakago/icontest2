<header>
  <div class="container-fluid">
    <div class="row">
      <div class="header_left hidden-xs hidden-sm col-md-3"></div>
      <div class="header_center_center col-xs-2 col-md-1">
        <a class="btn btn-default btn-xs" href="<%= contacts_path %>" role="button">
          <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default btn-xs" href="<%= contacts_path %>" role="button">
          <span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span>
        </a>
      </div>
      <div class="header_right hidden-xs hidden-sm col-md-4"></div>
    </div>
  </div>
</header>
<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
